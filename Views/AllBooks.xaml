<UserControl x:Class="EPubReader.Views.AllBooks"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EPubReader.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Load book" Click="Add_Book"></MenuItem>
            </Menu>
            <TextBox DockPanel.Dock="Bottom" Text="Number of books: " IsReadOnly="True"></TextBox>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <ItemsControl Name="bookList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="AliceBlue" CornerRadius="3" Margin="10" BorderBrush="Black" BorderThickness="1">
                                    <Grid Margin="10" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Image Grid.Row="0" Name="bookCover" Source="{Binding Id, StringFormat = '/bin/Debug/net8.0-windows/book-covers/{0}.jpg'}"/>
                                        <TextBlock Grid.Row="1" HorizontalAlignment="Left" FontSize="18" TextWrapping="NoWrap" Text="{Binding Title}" />
                                        <TextBlock Grid.Row="2" Margin="0 0 0 5">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="ID: {0}, Adding date: {1}">
                                                    <Binding Path="Id" />
                                                    <Binding Path="AddingDate" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                        <Button HorizontalAlignment="Left" Grid.Row="3" Content="Delete" Command="{Binding}" Click="Button_Click"></Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</UserControl>
