<Window x:Class="EPubReader.Views.AllBooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EPubReader.Views"
        xmlns:views="clr-namespace:EPubReader.Views"
        mc:Ignorable="d"
        Title="EPubReader" MinHeight="400" Height="450" MinWidth="700" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Cursor="Hand" Header="Load book" Command="{Binding AddNewBookCommand}"/>
            </Menu>
            <TextBox Name="NumberOfBooks"
                     DockPanel.Dock="Bottom"
                     Text="{Binding BooksCounter, StringFormat='Number of books: {0}'}"
                     IsReadOnly="True"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Border BorderBrush="Gray" BorderThickness="0 0 1 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <TextBox DockPanel.Dock="Top" Width="200" Margin="5">
                                <TextBox.Text>Book search...</TextBox.Text>
                            </TextBox>
                            <ComboBox Width="200" Margin="5" IsEditable="True" IsReadOnly="True" Text="Sort by" BorderBrush="Black">
                                <ComboBoxItem>Name</ComboBoxItem>
                                <ComboBoxItem>Adding date</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>
                        <ListBox Name="booksListBox" Grid.Row="1" ItemsSource="{Binding Books}" SelectedItem="{Binding SelectedBook, Mode=TwoWay}" ScrollViewer.CanContentScroll="True" HorizontalContentAlignment="Stretch" BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Label Height="40" VerticalContentAlignment="Center" FontSize="16" Content="{Binding Title}" Cursor="Hand" MouseDoubleClick="Label_MouseDoubleClick">
                                        <Label.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Delete book" Click="MenuItem_Click" />
                                            </ContextMenu>
                                        </Label.ContextMenu>
                                    </Label>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                <views:BookInfo Grid.Column="1" DataContext="{Binding SelectedBook}"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
