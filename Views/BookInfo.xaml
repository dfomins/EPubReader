<UserControl x:Class="EPubReader.Views.BookInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EPubReader.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="Book Details" FontSize="20" FontWeight="Bold" Margin="10"/>
        <StackPanel Margin="10,40,10,10">
            <TextBlock Text="Title:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Title}" Margin="0,0,0,10"/>

            <TextBlock Text="Path:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Path}" Margin="0,0,0,10"/>

            <TextBlock Text="Added Date:" FontWeight="Bold"/>
            <TextBlock Text="{Binding AddingDate}" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</UserControl>
