<UserControl x:Class="EPubReader.Views.BookInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EPubReader.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1 0 0 0">
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border BorderBrush="Black" BorderThickness="0 0 0 1">
                    <Rectangle Grid.Row="0" Fill="Cyan"/>
                </Border>
                <TextBlock Text="Book cover" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28" />
                <TextBlock Grid.Row="1" Text="Book title" Margin="10 5 0 0" VerticalAlignment="Center" FontSize="28"/>
                <TextBlock Grid.Row="2" Text="Book description..." Margin="10 5 0 0" FontSize="16"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
